.search
    width: 100%;overflow-x:hidden;
    *
        margin:0;padding:0;
    .header
        width:100%;position:fixed;left:0;top:0;border-bottom:1px solid #eee;
    dl
        width: 100%;
    .container
        padding-bottom: 300px;
    .content
        margin-top:50px;
    .list-wrap
        width: 100%;display:flex;flex-wrap:wrap;text-align:left;font-size:14px;box-sizing:border-box;padding:0 5px; justify-content: space-between;
        .list-item
            width:45%;margin-top:15px;
        .p-image
            img
                width:100%;object-fit:cover;// width:200px;
        .p-title
            box-sizing:border-box;padding:0 5px;overflow:hidden;height: 35px;
            a
                text-decoration: none;color:#000;
        .p-price
            box-sizing:border-box;padding:0 15px;color:red;font-weight:bold;font-size:16px;line-height:30px;
        .p-merchant
            box-sizing:border-box;padding:0 15px;
    .pagination-line-box
        margin-top:10px;margin-bottom:10px;
    .pagination
        margin-bottom: 20px;width:100%;min-height:50px;